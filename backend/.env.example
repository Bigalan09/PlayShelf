# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://playshelf_user:playshelf_password@localhost:5432/playshelf_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=playshelf_dev
DATABASE_USER=playshelf_user
DATABASE_PASSWORD=playshelf_password
DATABASE_MAX_CONNECTIONS=20
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# BoardGameGeek API (for future use)
BGG_API_BASE_URL=https://api.geekdo.com/xmlapi2

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# External APIs (for future expansion)
STEAM_API_KEY=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=